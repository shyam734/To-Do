<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>AddNoteServlet</servlet-name>
  	<display-name>AddNoteServlet</display-name>
  	<description></description>
  	<servlet-class>com.todo.controller.AddNoteServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>DeleteNoteServlet</servlet-name>
  	<display-name>DeleteNoteServlet</display-name>
  	<description></description>
  	<servlet-class>com.todo.controller.DeleteNoteServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>UpdateNoteServlet</servlet-name>
  	<display-name>UpdateNoteServlet</display-name>
  	<description></description>
  	<servlet-class>com.todo.controller.UpdateNoteServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ViewNoteServlet</servlet-name>
  	<display-name>ViewNoteServlet</display-name>
  	<description></description>
  	<servlet-class>com.todo.controller.ViewNoteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AddNoteServlet</servlet-name>
  	<url-pattern>/addNote</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>DeleteNoteServlet</servlet-name>
  	<url-pattern>/delete</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>UpdateNoteServlet</servlet-name>
  	<url-pattern>/update</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ViewNoteServlet</servlet-name>
  	<url-pattern>/ViewNoteServlet</url-pattern>
  </servlet-mapping>
</web-app>
